<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
     <meta charset="utf-8">
     <title>Blog Website</title>
     <meta charset="utf-8">
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

     <link rel="stylesheet" href="/css/styles.css">
     <style>
          body {
               background-image: url("/css/images/blog.jpg");
          }
     </style>

<body>
     <div class="container">
          <h1 class="mb-4"><strong><em>Blog Articles</em></strong></h1>
          <a href="/articles/new" class="btn btn-success">New Article</a>
          <a href="/articles/myArticle" class="btn btn-success">My Article</a>
          <a href="/articles/myArticle" class="btn btn-success">fav</a>
          <a href="/logout" class=" btn btn-danger">Log Out</a>

          <% articles.forEach(article => { %>
          <div class="card">
               <div class="card-body">
                    <div class="list-inline-item content">
                         <h4 class="card-title h1"><%= article.title %></h4>
                         <div class="card-subtitle text-muted mb-3 h6">
                              <%= article.createdAt.toLocaleDateString() %>
                         </div>
                         <div class="card-text mb-2 h5"><%= article.description %></div>
                    </div>

                    <div class="buttons list-inline-item">
                         <a href="articles/<%= article.slug %>" class="btnIndex btn btn-primary">Read More</a>
                    </div>
               </div>
          </div>
          <% }) %>
     </div>
</body>

</html>
