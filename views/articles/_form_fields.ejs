<div class="form-group">
     <label for="title" class="h3"><b>Title</b></label>
     <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>


<div class="form-group">
     <label for="description" class="h3"><b>Description</b></label>
     <textarea name="description" id="description" class="form-control cols=" 30" rows="2 "><%= article.description %></textarea>
</div>

<div class="form-group">
     <label for="markdown" class="h3"><b>Markdown</b></label>
     <textarea required name="markdown" id="markdown" class="form-control cols=" 30" rows="4 "><%= article.markdown %></textarea>
</div>

<a href="/articles" class="btn btn-secondary"><b>Cancel</b></a>
<button type="submit" class="btn btn-primary"><b>Save</b></button>
